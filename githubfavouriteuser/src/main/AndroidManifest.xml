<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilham.githubfavouriteuser">
    <uses-permission android:name="com.ilham.githubmemberapp.READ_DATABASE" />
    <uses-permission android:name="com.ilham.githubmemberapp.WRITE_DATABASE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubMemberApp">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.DetailUserActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.GithubMemberApp" />
    </application>

</manifest>